@model IEnumerable<AL.Events.WEB.Models.OrganizerViewModel>

@{
                ViewBag.Title = "View";
}

<h2>Organizers</h2>

<p>
    @Html.RouteLink("Add new organizer", new { controller = "Organizer", action = "Create" }, new { @class = "btn btn-default" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phones)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelitem => item.Id)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Phones)
    </td>
    <td>
        @Html.RouteLink("Edit", new { controller = "Organizer", action = "Edit", id = item.Id }, new { @class = "btn btn-default" })
        @Html.RouteLink("Delete", new { controller = "Organizer", action = "Delete", id = item.Id }, new { @class = "btn btn-default" })
    </td>
</tr>
}

</table>
